{
    "name": "cobase",
    "productName": "Cobase",
    "version": "0.1.0",
    "type": "module",
    "private": true,
    "description": "Codebase viewer for copying file context",
    "main": "src/backend/main.js",
    "scripts": {
        "start": "node scripts/dev.js",
        "build": "node scripts/build.js",
        "clean": "rimraf dist release-builds",
        "postinstall": "electron-rebuild -f -w node-pty || true"
    },
    "dependencies": {
        "@electron/rebuild": "^4.0.1",
        "@xterm/addon-fit": "^0.10.0",
        "@xterm/xterm": "^5.5.0",
        "chokidar": "^4.0.3",
        "ignore": "^7.0.4",
        "isbinaryfile": "^5.0.4",
        "js-tiktoken": "^1.0.20",
        "lucide-react": "^0.508.0",
        "node-pty": "^1.0.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "zustand": "^5.0.4"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.5",
        "@types/react": "^19.1.3",
        "@types/react-dom": "^19.1.3",
        "@vitejs/plugin-react": "^4.4.1",
        "concurrently": "^8.0.1",
        "electron": "^36.2.0",
        "electron-builder": "^24.13.3",
        "rimraf": "^5.0.10",
        "tailwindcss": "^4.1.5",
        "typescript": "^5.8.3",
        "vite": "^6.3.4",
        "vite-tsconfig-paths": "^4.0.1",
        "wait-on": "^7.0.1"
    },
    "build": {
        "appId": "com.cobase.product",
        "productName": "Cobase",
        "asar": true,
        "npmRebuild": false,
        "asarUnpack": [],
        "directories": {
            "output": "release-builds"
        },
        "files": [
            "dist/**/*",
            "src/backend/**/*",
            "node_modules/**/*"
        ],
        "mac": {
            "icon": "icons/icon.icns",
            "target": [
                "dir"
            ]
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm"
            ]
        }
    }
}
